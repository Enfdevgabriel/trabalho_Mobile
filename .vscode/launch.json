    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome (isolated profile) http://localhost:59495",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "http://localhost:59495",
            "webRoot": "${workspaceFolder}",
            "runtimeArgs": [
                "--user-data-dir=${workspaceFolder}/.vscode/chrome-profile"
            ]
        }
    ]

}